<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.COvac" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorPrimaryVariant">@android:color/darker_gray</item>
        <item name="colorOnPrimary">@android:color/darker_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/darker_gray</item>
        <item name="colorSecondaryVariant">@android:color/darker_gray</item>
        <item name="colorOnSecondary">@android:color/darker_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/nanum</item>
    </style>


    <style name="toolbar_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1f2933</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>


    <style name="toolbar_theme_back" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="toolbar_theme_back_yellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_yellow</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">#242424</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="toolbar_theme_close" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="navigationIcon">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="tab_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanum_extra_bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#1f2933</item>
    </style>


</resources>
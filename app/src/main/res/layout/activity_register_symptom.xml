<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.symptom.RegisterSymptomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cancle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_extra_bold"
                android:text="취소"
                android:textAppearance="@style/toolbar_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/upload_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_extra_bold"
                android:lineSpacingExtra="10sp"
                android:text="내증상 공유하기"
                android:textAppearance="@style/toolbar_title"
                android:textColor="#2929cc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:lineSpacingExtra="6sp"
        android:text="비누"
        android:textColor="#1f2933"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <TextView
        android:id="@+id/vac_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:lineSpacingExtra="6sp"
        android:text="아스트라제네카"
        android:textColor="#9aa5b1"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/user_nickname"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/mid_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:text="·"
        android:textColor="#ffbd3e"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/vac_name"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:lineSpacingExtra="6sp"
        android:text="10대"
        android:textColor="#9aa5b1"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/mid_1"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/mid_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:text="·"
        android:textColor="#ffbd3e"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/user_age"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/user_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:lineSpacingExtra="6sp"
        android:text="서울"
        android:textColor="#9aa5b1"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/mid_2"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/mid_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:text="·"
        android:textColor="#ffbd3e"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/user_region"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <TextView
        android:id="@+id/vac_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanum_extra_bold"
        android:lineSpacingExtra="6sp"
        android:text="21/03/12"
        android:textColor="#9aa5b1"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/mid_3"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f7fa"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/user_nickname">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tag_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.chip.Chip
                style="@style/chip_orange"
                android:id="@+id/user_purpose_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발열" />

            <com.google.android.material.chip.Chip
                style="@style/chip_blue"
                android:id="@+id/user_purpose_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오한" />

            <com.google.android.material.chip.Chip
                style="@style/chip_yellow"
                android:id="@+id/user_purpose_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구토" />

            <com.google.android.material.chip.Chip
                style="@style/chip_gray"
                android:id="@+id/user_purpose_tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="두통" />

            <com.google.android.material.chip.Chip
                style="@style/chip_darkgray"
                android:id="@+id/user_purpose_tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="근육통" />

        </com.google.android.material.chip.ChipGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="기타 증상 및 생생한 이야기를 남겨보세요."
            app:boxStrokeColor="@android:color/transparent"
            app:counterEnabled="true"
            app:counterMaxLength="140"
            app:layout_constraintTop_toBottomOf="@id/tag_group">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:fontFamily="@font/nanum_extra_bold"
                android:lineSpacingExtra="6sp"
                android:textColor="#1f2933"
                android:textSize="10sp" />

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
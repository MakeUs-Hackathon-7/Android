<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    tools:context=".ui.CertificateFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:src="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gallery_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <android.widget.Button
        android:id="@+id/gallery_btn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#616e7c"
        android:text="  갤러리에서 다시선택하기"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:paddingStart="30dp"
        android:drawableLeft="@drawable/ic_photo"
        android:drawableTint="@color/white"
        android:lineSpacingExtra="6sp"
        android:gravity="left|center_vertical"
        android:fontFamily="@font/nanum_extra_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/camera_Btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/camera_Btn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#ffbd3e"
        android:text="  확인서 다시인식하기"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:paddingStart="50dp"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/ic_camera"
        android:drawableTint="@color/white"
        android:lineSpacingExtra="6sp"
        android:fontFamily="@font/nanum_extra_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gallery_btn" />




</androidx.constraintlayout.widget.ConstraintLayout>